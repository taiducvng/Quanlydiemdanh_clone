@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model SV.Models.CourseModels

<div class="account-management">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="page-title-box d-flex align-items-center justify-content-between">
                        <h4>Quản lý khóa học</h4>
                        <div class="page-title-right">
                            <a href="@Url.Action("Edit", "Course")" class="btn btn-outline-info">Chỉnh sửa</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @using (Html.BeginForm("Edit", "Course", FormMethod.Post, new { @id = "form-create", @class = "form-horizontal needs-validation", @enctype = "multipart/form-data" }))
    {
        @Html.Partial("_Form", Model)
    }
</div>

<script>
    $(document).ready(function () {
        var _SinhVienIds = '@Html.Raw(Json.Encode(Model.SinhVienIds))'
        if (_SinhVienIds.length > 0) {
            $('#SinhVienIds').val(JSON.parse(_SinhVienIds)).trigger("change");
        }
    })
</script>

