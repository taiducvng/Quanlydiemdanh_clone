@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using SV.Enum
@model List<SV.Models.CourseModels>
<div class="row">
    @if (Model != null && Model.Any())
    {
        foreach (var item in Model)
        {
            <div class="col-md-6 col-xl-3">
                <a href="@Url.Action("DsSlot", "Schedule", new { courseId = item.Id })">
                    <div class="card">
                        <div class="card-body">
                            <div>
                                <h4 class="mb-1 mt-1">
                                    @item.Name
                                </h4>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        }
    }    
</div>
