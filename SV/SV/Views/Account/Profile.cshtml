@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model SV.Models.UserModels
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <div>
                    <h4 class="mb-1 mt-1">
                        THÔNG TIN NGƯỜI DÙNG
                    </h4>
                </div>
                <div class="p-2 mt-4">
                    @using (Html.BeginForm("Profile", "Account", FormMethod.Post, new { @id = "form-login", @class = "form-horizontal needs-validation", @novalidate = "novalidate", @enctype = "multipart/form-data" }))
                    {
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label" for="username">Mã người dùng <sup class="text-danger">*</sup></label>
                                    @Html.HiddenFor(m => m.Id)
                                    @Html.TextBoxFor(m => m.Code, new { @class = "form-control", @id = "username", placeholder = "Nhập mã người dùng", @required = "" })
                                    @Html.ValidationMessageFor(m => m.Name, "Thông tin bắt buộc.", new { @class = "invalid-feedback" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label" for="username">Tên người dùng <sup class="text-danger">*</sup></label>
                                @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @id = "username", placeholder = "Nhập tên người dùng", @required = "" })
                                @Html.ValidationMessageFor(m => m.Name, "Thông tin bắt buộc.", new { @class = "invalid-feedback" })
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label" for="phone">Email<sup class="text-danger">*</sup></label>
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @id = "phone", placeholder = "Nhập email", @required = "" })
                                    @Html.ValidationMessageFor(m => m.Email, "Thông tin bắt buộc.", new { @class = "invalid-feedback" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label" for="phone">Số điện thoại <sup class="text-danger">*</sup></label>
                                    @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", @id = "phone", placeholder = "Nhập số điện thoại", @required = "" })
                                    @Html.ValidationMessageFor(m => m.Phone, "Thông tin bắt buộc.", new { @class = "invalid-feedback" })
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label" for="phone">Mật khẩu<sup class="text-danger">*</sup></label>
                                    @Html.TextBoxFor(m => m.Password, new { @class = "form-control", @id = "phone", placeholder = "Mật khẩu", @required = "" })
                                    @Html.ValidationMessageFor(m => m.Password, "Thông tin bắt buộc.", new { @class = "invalid-feedback" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label" for="phone">Xác nhận mật khẩu<sup class="text-danger">*</sup></label>
                                    @Html.TextBoxFor(m => m.ConfirmPassword, new { @class = "form-control", @id = "phone", placeholder = "Xác nhận mật khẩu", @required = "" })
                                    @Html.ValidationMessageFor(m => m.ConfirmPassword, "Thông tin bắt buộc.", new { @class = "invalid-feedback" })
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="mb-3">
                                    <label class="form-label" for="address">Địa chỉ</label>
                                    @Html.TextAreaFor(m => m.Address, new { @class = "form-control", @id = "address", placeholder = "Nhập địa chỉ", @row=3 })
                                    @Html.ValidationMessageFor(m => m.Address, "Thông tin bắt buộc.", new { @class = "invalid-feedback" })
                                </div>
                            </div>
                        </div>


                       

                        <div class="mt-3 text-end">
                            <button class="btn btn-primary w-sm waves-effect waves-light" type="submit">Cập nhật</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

